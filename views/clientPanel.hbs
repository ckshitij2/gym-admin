{{> header}} <!-- Include header partial -->

<main class="client-management">
  <h2>Client Management Panel</h2>
  <p>Manage your clients here:</p>

  <div class="action-buttons">
    <a href="/admin/addClient" class="action-btn add-btn">Add New Client</a>
    <a href="/admin/updateClient" class="action-btn update-btn">Update Client Info</a>
    <a href="/admin/getClientDetails" class="action-btn details-btn">Get Client Details</a>
    <a href="/admin/deleteClient" class="action-btn delete-btn">Delete Client</a>
  </div>
</main>

{{> footer}} <!-- Include footer partial -->

<!-- Inline CSS for Styling -->
<style>
  .client-management {
    padding: 20px;
    font-family: 'Poppins', sans-serif;
    background-color: #f4f6f8;
    min-height: 90vh;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    text-align: center;
  }

  .client-management h2 {
    font-size: 28px;
    margin-bottom: 20px;
    color: #003366;
  }

  .client-management p {
    font-size: 18px;
    margin-bottom: 20px;
    color: #555;
  }

  .action-buttons {
    display: flex;
    flex-direction: column;
    gap: 20px;
    align-items: center; /* Center the buttons horizontally */
  }

  .action-btn {
    display: block;
    width: 250px; /* Increased width */
    padding: 15px 25px; /* Increased padding */
    font-size: 18px; /* Increased font size */
    text-align: center;
    text-decoration: none;
    border-radius: 5px;
    font-weight: 600;
    transition: background-color 0.3s ease;
    color: white;
  }

  .action-btn:hover {
    opacity: 0.9;
  }

  .add-btn {
    background-color: #28a745; /* Green */
  }

  .update-btn {
    background-color: #ffc107; /* Yellow */
  }

  .details-btn {
    background-color: #17a2b8; /* Info Blue */
  }

  .delete-btn {
    background-color: #dc3545; /* Red */
  }
</style>
