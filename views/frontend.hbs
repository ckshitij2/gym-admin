<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>{{title}}</title>
  <link rel="stylesheet" href="/css/styles.css">
  <style>
    /* Modal styles */
    .modal {
      display: none; /* Hidden by default */
      position: fixed; /* Stay in place */
      z-index: 1; /* Sit on top */
      left: 0;
      top: 0;
      width: 100%;
      height: 100%;
      overflow: auto; /* Enable scroll if needed */
      background-color: rgba(0, 0, 0, 0.4); /* Black with opacity */
      padding-top: 60px; /* Position the modal */
    }

    .modal-content {
      background-color: white;
      margin: 5% auto;
      padding: 20px;
      border: 1px solid #888;
      width: 400px;
      border-radius: 8px;
    }

    .close-btn {
      color: #aaa;
      font-size: 28px;
      font-weight: bold;
      position: absolute;
      right: 10px;
      top: 10px;
      cursor: pointer;
      z-index: 10; /* Ensure the button appears on top */
    }

    .close-btn:hover,
    .close-btn:focus {
      color: black;
      text-decoration: none;
      cursor: pointer;
    }

    /* General styling for the page */
    .top-bar {
      text-align: right;
      margin: 20px;
    }

    .top-bar a {
      font-size: 18px;
      color: #007bff;
      text-decoration: none;
    }

    .main-content {
      display: flex;
      justify-content: center;
      align-items: center;
      flex-direction: column;
      margin-top: 30px;
    }

    .select {
      width: 80%;
      margin: 0 auto;
    }

    table {
      width: 100%;
      border-spacing: 10px;
      text-align: center;
    }

    td {
      background-color: black;
      border: 1px solid white;
      height: 600px;
      width: 33%; /* Ensure each cell takes up 1/3 of the table's width */
      position: relative;
    }

    td img {
      width: 100%;
      height: 100%;
      object-fit: cover; /* Ensure the image covers the whole box without distortion */
    }

    .button {
      background-color: #007bff;
      color: white;
      padding: 10px 20px;
      border: none;
      border-radius: 4px;
      cursor: pointer;
      transition: background-color 0.3s;
      position: absolute;
      bottom: 10px;
      left: 50%;
      transform: translateX(-50%);
    }

    .button:hover {
      background-color: #0056b3;
    }

    /* Responsive design */
    @media (max-width: 768px) {
      table {
        width: 100%;
        margin: 0 auto;
      }

      td {
        height: auto;
        padding: 10px;
      }

      .button {
        font-size: 14px;
        padding: 8px 16px;
      }

      td img {
        max-width: 100%;
        height: auto;
      }
    }
  </style>
</head>
<body>

  <!-- Top bar with Login link -->
  <div class="top-bar">
    <a href="javascript:void(0)" id="loginLink">Login as Admin</a>
  </div>

  <!-- Main content -->
  <main class="main-content">
    <div class="select">
      <table>
        <tr>
          <td>
            <img src="/images/chest_images/chest_logo.jpg" alt="Chest Logo">
            <center>
              <a href="chest.html">
                <button class="button">SEARCH</button>
              </a>
            </center>
          </td>
          <td>
            <img src="/images/back_images/back.jpg" alt="Back Image">
            <center>
              <a href="back.html">
                <button class="button">SEARCH</button>
              </a>
            </center>
          </td>
          <td>
            <img src="public/images/thigh_images/thigh.jpg" alt="Thigh Image">
            <center>
              <a href="thigh.html">
                <button class="button">SEARCH</button>
              </a>
            </center>
          </td>
        </tr>
        <tr>
          <td>
            <img src="/images/biceps_images/biceps.jfif" alt="Biceps Image">
            <center>
              <a href="biceps.html">
                <button class="button">SEARCH</button>
              </a>
            </center>
          </td>
          <td>
            <img src="/images/triceps_images/triceps.jfif" alt="Triceps Image">
            <center>
              <a href="triceps.html">
                <button class="button">SEARCH</button>
              </a>
            </center>
          </td>
          <td>
            <img src="/images/warmup_images/warmup_logo.png" alt="Warmup Logo">
            <center>
              <a href="warmup.html">
                <button class="button">SEARCH</button>
              </a>
            </center>
          </td>
        </tr>
      </table>
    </div>
  </main>

  <!-- Footer -->
  {{> footer}}

  <!-- Modal for Admin Login -->
  {{> loginModal}}

  <script>
    // Get the modal and link
    var modal = document.getElementById("loginModal");
    var loginLink = document.getElementById("loginLink");
    var closeModal = document.getElementById("closeModal");

    // Open the modal when the login link is clicked
    loginLink.onclick = function() {
      modal.style.display = "block";
    };

    // Close the modal when the user clicks on the close button inside the modal
    closeModal.onclick = function() {
      modal.style.display = "none";
    };

    // Close the modal if the user clicks outside the modal content
    window.onclick = function(event) {
      if (event.target == modal) {
        modal.style.display = "none";
      }
    };
  </script>

</body>
</html>
