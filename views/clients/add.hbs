<!-- views/clients/add.hbs -->
<h1>Add New Client</h1>
<form action="/clients/add" method="POST">
  <label>First Name:</label>
  <input type="text" name="first_name" required />
  <label>Last Name:</label>
  <input type="text" name="last_name" required />
  <label>Age:</label>
  <input type="number" name="age" required />
  <label>Phone Number:</label>
  <input type="text" name="phone_number" />
  <label>Weight:</label>
  <input type="number" step="0.01" name="weight" />
  <label>Height:</label>
  <input type="number" step="0.01" name="height" />
  <label>BMI:</label>
  <input type="number" step="0.01" name="bmi" />
  <label>Address:</label>
  <textarea name="address"></textarea>
  <label>Start Date:</label>
  <input type="date" name="start_date" />
  <label>Membership Type:</label>
  <input type="text" name="membership_type" />
  <label>Fees Amount:</label>
  <input type="number" step="0.01" name="fees_amount" />
  <label>Fees Status:</label>
  <input type="text" name="fees_status" value="Unpaid" />
  <button type="submit">Add Client</button>
</form>